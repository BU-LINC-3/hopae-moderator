<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Hopae.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Hopae.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorAccent">@color/lighter</item>
        <item name="android:colorPrimary">@color/normal</item>
        <item name="android:colorPrimaryDark">@color/darker</item>
        <item name="android:textColorHighlight">@color/textAlt</item>
        <item name="android:colorControlActivated">@color/text</item>
        <item name="android:colorControlHighlight">@color/textAlt</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>